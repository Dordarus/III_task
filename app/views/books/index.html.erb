<% provide(:title, "Books") %>
<div class="container">
    <div class="page-header">
        <h1>Books</h1>    
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <strong>Title</strong>
                </th>
                <th>
                    <strong>Author</strong>
                </th>
                <th>
                    <strong>Year</strong>
                </th>
                <th>
                    <strong>Genre</strong>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |b| %> 
                <tr>
                    <td>
                        <i><%= b.title %></i>
                    </td>
                    <td>
                        <i><%= b.user.profile.name %></i>
                    </td>
                    <td>
                        <i><%= b.year %></i>
                    </td>
                    <td>
                        <i><%= b.genre %></i>
                    </td>         
                    <% if user_signed_in? %>
                        <td>
                            <%= link_to 'Show', book_path(b), class: 'btn btn-info btn-sm' %>
                        </td>                
                    <% end %>         
                </tr>
            <% end %>
        </tbody>
    </table>
</div>