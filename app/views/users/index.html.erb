<% provide(:title, "Users") %>
<div class="container">
    <div class="page-header">
        <h1>Users</h1>    
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <strong>Name</strong>
                </th>
                <th>
                    <strong>Email</strong>
                </th>
                <th>
                    <strong>Role</strong>
                </th>
                <th>
                    <strong>Last Sign In At</strong>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |b| %> 
            <tr>
                <td>
                    <i><%= b.name %></i>
                </td>
                <td>
                    <i><%= b.email %></i>
                </td>
                <td>
                    <i><%= b.role %></i>
                </td>
                <td>
                    <i><%= b.last_sign_in_at %></i>
                </td>                  
            </tr>
            <% end %>
        </tbody>
    </table>
</div>